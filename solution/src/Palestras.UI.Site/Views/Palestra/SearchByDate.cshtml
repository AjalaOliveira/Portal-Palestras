@model Palestras.Application.ViewModels.SearchByDateViewModel

@{
    ViewData["Title"] = "Pesquisar Palestra";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="SearchByDate">
    <div class="form-horizontal">
        <div class="form-group">
            <label asp-for="Data" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Pesquisar" class="btn btn-success" />
            <a asp-action="Index" class="btn btn-info">Voltar à lista</a>
        </div>
    </div>
</form>
<br />
<br />
@if (Model != null && Model.PalestraPalestranteViewModel.Count() > 0)
{
    <div>
        @foreach (var item in Model.PalestraPalestranteViewModel)
        {
            <hr />
            <h4>Dados do Palestra</h4>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => item.Titulo)
                </dt>
                <dd>
                    @Html.DisplayFor(model => item.Titulo)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => item.Descricao)
                </dt>
                <dd>
                    @Html.DisplayFor(model => item.Descricao)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => item.Data)
                </dt>
                <dd>
                    @Html.DisplayFor(model => item.Data)
                </dd>
            </dl>

            <h4>Dados do Palestrante</h4>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => item.Palestrante.Nome)
                </dt>
                <dd>
                    @Html.DisplayFor(modelItem => item.Palestrante.Nome)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => item.Palestrante.MiniBio)
                </dt>
                <dd>
                    @Html.DisplayFor(modelItem => item.Palestrante.MiniBio)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => item.Palestrante.Url)
                </dt>
                <dd>
                    @Html.DisplayFor(modelItem => item.Palestrante.Url)
                </dd>
            </dl>
        }
    </div>
}
@if (Model != null && Model.PalestraPalestranteViewModel.Count() == 0)
{
    <div>
        <h4>Nenhuma Palestra cadastrada nesse dia!</h4>
    </div>
}