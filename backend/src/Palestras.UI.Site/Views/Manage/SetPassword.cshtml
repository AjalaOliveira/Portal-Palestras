@using Palestras.UI.Site.Views.Manage
@model SetPasswordViewModel
@{
    ViewData["Title"] = "Definir senha";
    ViewData.AddActivePage(ManageNavPages.ChangePassword);
}

<h4>Define sua senha</h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<p class="text-info">
    Você não tem um nome de usuário/senha para este site. Adicione uma conta local para que você possa fazer login sem um login externo.
</p>
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control"/>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control"/>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Definir Senha</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}